<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/oval_workout_icon_diameter"
        android:layout_height="@dimen/oval_workout_icon_diameter"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/oval_stroke_background"
        android:contentDescription="@string/workout_icon"
        android:padding="20dp"
        android:src="@drawable/weight_workout_icon"
        android:tint="@color/darkGray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="20dp"
        android:text="@string/no_workout_planned"
        android:textColor="@color/darkGray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/add_workout"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/weightPrimary" />

</LinearLayout>